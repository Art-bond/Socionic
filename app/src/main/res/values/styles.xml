    <style name="PreviousButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:fontFamily">@font/montserrat_700</item>
        <item name="android:textColor">@color/yellow_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="BackButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minWidth">42dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RoundedCornerButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/montserrat_700</item>
        <item name="android:textColor">@color/purple_text</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainText">
        <item name="font">@font/hammersmith_one</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="TitleLightText">
        <item name="font">@font/hammersmith_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/subtitle_text</item>
    </style>


</resources>