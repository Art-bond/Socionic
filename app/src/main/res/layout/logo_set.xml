<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ic_head"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/head"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_icon_question"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ic_head"
            app:layout_constraintEnd_toEndOf="@+id/iv_ic_head"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="@+id/iv_ic_head"
            app:layout_constraintTop_toTopOf="@+id/iv_ic_head"
            app:layout_constraintVertical_bias="0.44"
            app:srcCompat="@drawable/ic_question_sign"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hammersmith_one"
            android:text="@string/ocionics"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ic_head"
            app:layout_constraintStart_toEndOf="@+id/iv_icon_question"
            app:layout_constraintTop_toTopOf="@+id/iv_ic_head"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/tv_recognize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hammersmith_one"
            android:text="@string/recognize_yourself"
            android:textColor="@color/yellow_text"
            android:textSize="20sp"
            android:translationY="-10dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>